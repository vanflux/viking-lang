{
  "name": "viking-lang",
  "version": "1.0.0",
  "description": "Viking language assembler, compiler and simulator/debugger",
  "main": "dist/index.js",
  "scripts": {
    "start": "ts-node-dev --respawn --transpile-only --exit-child src/entry.ts",
    "build": "tsc",
    "test": "mocha --slow -1 -r ts-node/register 'tests/**/*.ts'",
    "antlr4ts": "cd src/compiler/grammar && antlr4ts -visitor viking.g4 -o ../antlr",
    "coverage": "nyc --reporter=lcov --reporter=text-summary npm t",
    "format": "prettier --ignore-path .gitignore --write ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vanflux/viking-lang.git"
  },
  "author": "",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/vanflux/viking-lang/issues"
  },
  "homepage": "https://github.com/vanflux/viking-lang#readme",
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@types/chai": "^4.3.1",
    "@types/mocha": "^9.1.1",
    "@types/node": "^17.0.29",
    "antlr4ts-cli": "^0.5.0-alpha.4",
    "chai": "^4.3.6",
    "mocha": "^9.2.2",
    "nyc": "^15.1.0",
    "prettier": "2.6.2",
    "ts-node": "^10.7.0",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.6.3"
  },
  "dependencies": {
    "antlr4ts": "^0.5.0-alpha.4",
    "unraw": "^2.0.1"
  }
}
